<!--vista agregar-->
<div class="container" style="margin-top:10px">
    <div class="row" >
        <div class="col">
            <h4>Agregar nueva Novedad</h4>
            <form action="/admin/novedades/agregar" method="post" >
                <div class="mb-3-row">
                    
                        <input type="text" class="form-control" placeholder="Titulo" name="Titulo">
                    
                </div>
                <div class="mb-3" style="margin-top:10px">
                    
                        <textarea type="text" class="form-control" placeholder="Subtitulo" name="Subtitulo"></textarea>
                    
                </div>
                <div class="mb-3" style="margin-top:10px">
                    
                        <textarea type="text" class="form-control" placeholder="Descripcion" name="Descripcion"></textarea>
                    
                </div>
                <button type="submit" class="btn btn-primary" style="margin-top:10px">Guardar</button>
            </form>
            {{#if error}}
                <p> {{message}} </p>
            {{/if}}
        </div>
    </div>        
</div>